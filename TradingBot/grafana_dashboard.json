{
  "dashboard": {
    "id": null,
    "title": "TradingBot Dashboard",
    "tags": ["trading", "telegram", "bot"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Общая статистика",
        "type": "stat",
        "targets": [
          {
            "expr": "tradingbot_messages_total",
            "legendFormat": "Всего сообщений"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Использование CPU",
        "type": "gauge",
        "targets": [
          {
            "expr": "tradingbot_cpu_usage_percentage",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Использование памяти",
        "type": "gauge",
        "targets": [
          {
            "expr": "tradingbot_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Память MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Размер базы данных",
        "type": "gauge",
        "targets": [
          {
            "expr": "tradingbot_database_size_mb",
            "legendFormat": "Размер БД MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Сообщения по типам",
        "type": "piechart",
        "targets": [
          {
            "expr": "tradingbot_messages_total",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Сделки по типам",
        "type": "piechart",
        "targets": [
          {
            "expr": "tradingbot_trades_total",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Время отклика базы данных",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, tradingbot_database_response_time_seconds)",
            "legendFormat": "95-й процентиль"
          },
          {
            "expr": "histogram_quantile(0.50, tradingbot_database_response_time_seconds)",
            "legendFormat": "Медиана"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Ошибки по типам",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(tradingbot_errors_total[5m])",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Активные пользователи",
        "type": "stat",
        "targets": [
          {
            "expr": "tradingbot_active_users",
            "legendFormat": "Пользователи"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "Время обработки запросов",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, tradingbot_request_duration_seconds)",
            "legendFormat": "95-й процентиль"
          },
          {
            "expr": "histogram_quantile(0.50, tradingbot_request_duration_seconds)",
            "legendFormat": "Медиана"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
